<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.android.gowtham.city_hunt.Login"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ff84ecb9"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Publish your event"
            android:drawableLeft="@drawable/publish"
            android:id="@+id/textView3"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            tools:ignore="HardcodedText"
            android:textColor="#ffffff"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ff50bab6"
        android:layout_weight="1" >

        <TextView
            tools:ignore="HardcodedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Manage your event"
            android:drawableLeft="@drawable/edit"
            android:id="@+id/textView4"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp" />
    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffed4255"
        android:layout_weight="1">

        <TextView
            tools:ignore="HardcodedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Get more attendees"
            android:drawableLeft="@drawable/attend"
            android:id="@+id/textView5"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:background="@layout/button"
            android:id="@+id/button11"
            android:layout_gravity="center_vertical|left"
            tools:ignore="HardcodedText"
            android:textColor="#ffffff"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:onClick="Login"/>
    </LinearLayout>

</LinearLayout>
