<?xml version="1.0" encoding="utf-8"?>


<resources>

    <style name="Theme.Style2" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Style2</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Style2</item>
        <item name="actionBarTabTextStyle">@style/tabtextcolor</item>

    </style>

    <style name="ActionBar.Solid.Style2" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="backgroundStacked">@drawable/ab_stacked_solid_style2</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_style2</item>
    </style>
    <style name="tabtextcolor" parent="@android:style/Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textColor">#000000</item>
    </style>


    <style name="ActionBarTabStyle.Style2" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_style2</item>
    </style>

