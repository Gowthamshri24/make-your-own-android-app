<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.gowtham.city_hunt.Search$PlaceholderFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent"
        android:layout_marginTop="30dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:drawableTop="@drawable/all"
            android:drawablePadding="5dp"
            android:text="All"
            android:id="@+id/button3"
            tools:ignore="HardcodedText"
            android:textColor="#808080"
            android:background="#ffffff"
            android:textSize="13sp"
            android:padding="20dp"
            android:layout_weight="1"
            android:layout_marginRight="1dp" />

        <Button
            tools:ignore="HardcodedText"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:drawableTop="@drawable/events"
            android:drawablePadding="5dp"
            android:text="EVENTS"
            android:id="@+id/button2"
            android:textColor="#f12a38"
            android:background="#ffffff"
            android:textSize="13sp"
            android:padding="20dp"
            android:layout_weight="1" />

        <Button
            tools:ignore="HardcodedText"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:drawableTop="@drawable/festival"
            android:drawablePadding="5dp"
            android:text="FESTIVAL"
            android:id="@+id/button4"
            android:textColor="#00c3ff"
            android:background="#ffffff"
            android:textSize="13sp"
            android:padding="20dp"
            android:layout_weight="1"
            android:layout_marginLeft="1dp" />

    </LinearLayout>

    <LinearLayout
        tools:ignore="UselessParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp">

        <Button
            tools:ignore="HardcodedText"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:drawableTop="@drawable/busnss"
            android:drawablePadding="5dp"
            android:text="BUSINESS"
            android:id="@+id/button5"
            android:textColor="#4b9ece"
            android:background="#ffffff"
            android:textSize="13sp"
            android:padding="20dp"
            android:layout_weight="1"
            android:layout_marginRight="1dp" />

        <Button
            tools:ignore="HardcodedText"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:drawableTop="@drawable/sports"
            android:drawablePadding="5dp"
            android:text="SPORTS"
            android:id="@+id/button6"
            android:textColor="#412af1"
            android:background="#ffffff"
            android:textSize="13sp"
            android:padding="20dp"
            android:layout_weight="1" />

        <Button
            tools:ignore="HardcodedText"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:drawableTop="@drawable/college"
            android:drawablePadding="5dp"
            android:text="COLLEGE"
            android:id="@+id/button7"
            android:textColor="#fea500"
            android:background="#ffffff"
            android:textSize="13sp"
            android:padding="20dp"
            android:layout_weight="1"
            android:layout_marginLeft="1dp" />
    </LinearLayout>

    <LinearLayout
        tools:ignore="UselessParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="EDIT LOCATION"
            android:id="@+id/button8"
            android:layout_weight="1"
            android:background="#ff4dbfff"
            tools:ignore="HardcodedText"
            android:textColor="#ffffe6e6" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="MY EVENTS"
            android:id="@+id/button9"
            android:layout_weight="1"
            android:background="#ffff333d"
            tools:ignore="HardcodedText"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        tools:ignore="UselessParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center" >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/like"
            android:text="Like Us"
            android:id="@+id/button10"
            android:background="#ff3b5998"
            tools:ignore="HardcodedText"
            android:textColor="#ffffff"
            android:paddingLeft="100dp"
            android:gravity="center"
            android:paddingRight="120dp" />
    </LinearLayout>

</LinearLayout>
